<?xml version="1.0"?>
<psalm
        totallyTyped="false"
        errorLevel="4"
        resolveFromConfigFile="true"
>
    <projectFiles>
        <!-- Анализируем только папку src/ -->
        <directory name="src"/>

        <!-- Исключаем из анализа -->
        <exclude name="vendor"/>
        <exclude name="tests"/>
        <exclude name="node_modules"/>
    </projectFiles>
</psalm>
